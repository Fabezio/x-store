<%- include('partials/Head.ejs') -%>
<title>x store (exhibition)</title>
<%- include('partials/Navbar.ejs') -%>
<div class="container my-5">
  <h1 class="mb-4">Login</h1>
  <% if (message ) { %>
  <h2 class="alert alert-<%= message.type == 'success' ? 'success' : 'danger' %>"><%= message.body %></h2>
  <% } %>
  <form method="POST" action="/login">
    <div class="form-group">
      <label for="name">User's name</label>
      <input type="text" class="form-control <%= errors.name ? 'is-invalid' : '' %>" name="name" id="name"
        value="<%= formData.name %>" minlength="2" maxlength="64">
      <% if (errors.name) { %>
        <div class="invalid-feedback"><%= errors.name[0] %></div>
      <% } %>
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" class="form-control <%= errors.password ? 'is-invalid' : '' %>" name="password"
        id="password" value="<%= formData.password %>">
      <% if (errors.password) { %>
      <div class="invalid-feedback"><%= errors.password[0] %></div>

      <% } %>
    </div>
    <button type="submit" class="btn btn-primary">Log in</button>
  </form>

</div>


<%- include('partials/Foot.ejs') -%>
